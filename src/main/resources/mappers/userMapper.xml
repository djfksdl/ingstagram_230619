<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.ingstagram.user.mapper.UserMapper">
 	<update id="updateNameByNameUserId" parameterType="map">
		UPDATE `user`
		SET
			`name` = #{name}
			, `updatedAt` = NOW()
		WHERE
			`userId` = #{userId}
	</update>
 </mapper>